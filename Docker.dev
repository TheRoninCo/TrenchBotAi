FROM rust:1.70-slim

# Install dev tools
RUN apt-get update && apt-get install -y \
    python3-pip \
    && rm -rf /var/lib/apt/lists/*

# Python for analysis scripts
RUN pip install polars matplotlib notebook

WORKDIR /app
COPY . .

# Build with CPU features
RUN cargo build --features simulation

CMD ["cargo", "watch", "-x", "run -- --mode cpu"]